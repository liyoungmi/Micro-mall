/* pages/index/index.wxss */
.container{
  padding: 0; 
  background-color: #f2f2f2;
}
.swiper {
    height: 421.5rpx;
    width: 100%;
}
swiper-item image {
    width: 100%;
    height: 100%;
}
.search-text{
  height: 100rpx;
  width: 100%;
  background-color: #ff870c;
}
.newGoods{
  height: 100rpx;
   width: 100%;
  text-align: center;
  line-height: 100rpx;
  background-color: #fff;
  font-size: 16px;
  color: #ff870c;
}
.search{
  width: 90%;
  height: 50rpx;
  background-color: #fff;
  margin: 25rpx auto;
  border-radius: 15rpx;
  text-align: center;
  font-size: 30rpx;
  line-height: 50rpx;
  color: #c5c5c5;
}
.goods{
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  align-items: center;
}
.item{
  width: 49%;
  height: 230px;
  background-color: #fff;
  border: 1px solid #ccc;
  position: relative;
}
.item-img{
  width: 100px;
  height: 100px;
  margin-left: 25%;
}
.item-title{
  width: 90%;
  font-size: 16px;
  margin-left: 5%;
  overflow : hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2; /* 限制在一个块元素显示的文本的行数 */
  -webkit-box-orient: vertical; /* 垂直排列 */
  word-break: break-all;  /* 内容自动换行 */
}
.item-money{
  color: #fb4d04;
  margin-left: 3%;
  font-size: 20px;
}
.buy{
  display: flex;
  flex-direction: row;
  margin-top: 10px;
}
.item-border{
  height: 30px;
  width: 80px;
  border-radius: 15px;
  background-color: #fb4d04;
  color: #fff;
  line-height: 30px;
  margin-left: 5%;
  font-size: 12px;
  text-align: center;
}
.item-buy{
  height: 30px;
  width: 30px;
  position: absolute;
  bottom: 8px;
  right: 10px;
}