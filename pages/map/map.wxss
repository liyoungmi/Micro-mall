/* pages/map/map.wxss */
.storemapwords{
  height: 40rpx;
  width: 100%;
}
.input-address{
  height: 100rpx;
  width: 100%;
  background-color: #fff;
  display: flex;
  align-items: center;
}
.map-address{
  font-size: 16px;
  margin-left: 30rpx; 
  height: 40rpx;
  width: 85%;
  border: 1rpx rgb(231, 229, 229) solid;
  border-radius: 10rpx;
  padding-left: 50rpx;
  position: relative;
  z-index:9999;
}
.orders-no-mapAddress{
  text-align: center;
  margin-top: 30rpx;
}
.orders-list{
    padding:20rpx 20rpx 20rpx 20rpx;
    height: 80rpx;
    border-bottom: 1rpx solid #ededed;
}
.orders-mapAddress-detail{
  font-size: 16px;
}
.mapAddress-address{
  font-size: 13px;
} 
.mapwords{
    position: absolute;
    width: 100%;
    height: 100%;
    left: 0;
    top: 90rpx;
    background: #fff;
    z-index: 9;
    padding: 20rpx;
    box-sizing: border-box;
}
.mapwords-item{
    line-height: 70rpx;
    border-bottom: 1px solid #eee;
    color: #ff870c;
    font-size: 28rpx;
    width: 100%;
     overflow: hidden;
    text-overflow:ellipsis;
    white-space: nowrap; 
}
.mapwords-address{
  font-size: 12px;
  color: #787878;
}
.search-icon {
    position: absolute;
    left: 50rpx;
    top: 40rpx;
    width: 35rpx;
    height: 35rpx;
}
.search-btn{
    font-size: 25rpx;
    padding: 0 10rpx;
    line-height: 50rpx;
}